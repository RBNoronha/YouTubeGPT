<MudTextField @bind-Value="@Value" Label="@Label"
              Variant="Variant.Outlined" Adornment="Adornment.End"
              AdornmentIcon="@Icon"
              AdornmentColor="Color.Secondary" AutoFocus="true"
              Placeholder="@Placeholder" Lines="3"
              Disabled=@Disabled IconSize="Size.Large"
              HelperText="@HelperText" Immediate="true"
              OnKeyUp="@OnKeyUpAsync" Clearable="true"
              Counter="1_000" MaxLength="1_000"
              autocomplete="off" title="@HelperText" />

@if (_isReceivingResponse)
{
    <MudText Typo="Typo.caption" Color="Color.Secondary">
        Typing...
    </MudText>
}

@code {
    private bool _isReceivingResponse = false;
}

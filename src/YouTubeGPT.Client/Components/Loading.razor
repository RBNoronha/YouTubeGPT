<MudText Typo="Typo.h5" Color="Color.Secondary" Class="pb-2">
    @BusyMessage
</MudText>
<MudProgressCircular Color="Color.Secondary" Indeterminate="true" Class="pb-4" />

@if (IsTyping)
{
    <MudText Typo="Typo.caption" Color="Color.Secondary">
        Typing...
    </MudText>
}

@code {
    [Parameter]
    public string BusyMessage { get; set; } = "🤖 I'm generating an answer... Please wait.";

    [Parameter]
    public bool IsTyping { get; set; } = false;
}
